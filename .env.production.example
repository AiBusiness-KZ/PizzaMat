# ==============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================
# IMPORTANT: Replace all values with your own secure values
# Never commit this file with real credentials!

# ==============================================
# DATABASE
# ==============================================
POSTGRES_USER=pizzamat_prod
POSTGRES_PASSWORD=CHANGE_ME_strong_password_min_32_chars
POSTGRES_DB=pizzamatif_prod
DATABASE_URL=postgresql+asyncpg://pizzamat_prod:CHANGE_ME_strong_password_min_32_chars@postgres:5432/pizzamatif_prod

# ==============================================
# REDIS
# ==============================================
REDIS_PASSWORD=CHANGE_ME_redis_password_min_32_chars
REDIS_URL=redis://:CHANGE_ME_redis_password_min_32_chars@redis:6379/0

# ==============================================
# JWT SECURITY
# ==============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_jwt_secret_min_64_chars_use_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# ==============================================
# TELEGRAM (fill when bot is created)
# ==============================================
BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_WEBHOOK_SECRET=CHANGE_ME_webhook_secret
MANAGER_CHANNEL_ID=-1001234567890
ADMIN_TELEGRAM_IDS=123456789,987654321

# ==============================================
# OPENAI (for n8n workflow)
# ==============================================
OPENAI_API_KEY=sk-your_openai_api_key_here

# ==============================================
# N8N (fill after n8n setup)
# ==============================================
N8N_URL=https://your-n8n-instance.com
N8N_WEBHOOK_SECRET=CHANGE_ME_n8n_webhook_secret
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/pizzamat

# ==============================================
# APPLICATION
# ==============================================
DEBUG=false
ALLOWED_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
WEBAPP_URL=https://yourdomain.com

# ==============================================
# FILE UPLOAD
# ==============================================
MAX_FILE_SIZE=10485760  # 10 MB
UPLOAD_DIR=./uploads

# ==============================================
# DOMAIN & SSL (for nginx)
# ==============================================
DOMAIN=yourdomain.com
EMAIL=admin@yourdomain.com
